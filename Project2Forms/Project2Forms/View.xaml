<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project2Forms.View">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackLayout Grid.Column="0" Grid.Row="0">
                <Label></Label>
                <Label FontSize="Large" Text="" x:Name="labeltotal" Grid.Column="0" Grid.Row="1"/>
                <Label FontSize="Large" Text="" x:Name="labeltotalamount" Grid.Column="0" Grid.Row="1"/>
            </StackLayout>

            <ScrollView Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="3">
                <StackLayout x:Name="CoolLabelStack">
                    <Label></Label>
                    <Label></Label>
                    <Label></Label>
                </StackLayout>
            </ScrollView>

        </Grid>
    </ContentPage.Content>
</ContentPage>